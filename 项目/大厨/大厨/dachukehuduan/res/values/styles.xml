<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
  <item name="android:windowAnimationStyle">@style/anim_activity</item>
    </style>

    <style name="anim_activity" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/animate_activity_open_in</item>
         <item name="android:activityCloseEnterAnimation">@anim/animate_activity_xexit_in</item>
                <item name="android:activityOpenExitAnimation">@anim/animate_activity_open_out</item>
         
            <item name="android:activityCloseExitAnimation">@anim/animate_activity_exeit_out</item>
            
            </style>
 <style name="anima_window" parent="@android:style/Animation">
     <item name="android:windowEnterAnimation">@anim/animate_activity_xexit_in</item>
     
       <item name="android:windowExitAnimation">@anim/animate_activity_exeit_out</item>
 </style>   
   <style name="Windowanimation" parent="android:Theme.Light.NoTitleBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
  <item name="android:windowAnimationStyle">@style/anima_window</item>
    </style>  
    
    
    
</resources>
