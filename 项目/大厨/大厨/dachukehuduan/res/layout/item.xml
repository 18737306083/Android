<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/top1_bg" >

        <ImageView
            android:id="@+id/im_back_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:src="@drawable/flight_title_back_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="菜单"
            android:textSize="23sp" />
    </RelativeLayout>

    <ListView
        android:focusable="false"
        android:clickable="false"
        android:id="@+id/list_content_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_item"
        android:listSelector="@drawable/listselect"
        android:scrollbars="none"
        android:scrollingCache="false" >
    </ListView>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:alpha="0.8"
        android:background="@drawable/item_list_button"
        android:padding="5dp"
        android:text="@string/submit"
        android:textSize="22sp" />

</RelativeLayout>