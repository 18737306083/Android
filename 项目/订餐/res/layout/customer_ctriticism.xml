<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
     <RelativeLayout
        android:id="@+id/layout_login_topbar"
        style="@style/TopbarStyle" >

        <ImageView
            android:id="@+id/img_criticism_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="6dp"
            android:src="@drawable/flight_title_back_normal" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/criticism_title"
            android:textColor="#101010"
            android:textSize="@dimen/medium_text_size"
            android:textAppearance="?android:attr/textAppearanceLarge" />
     </RelativeLayout>
    <ScrollView android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
			 <ImageView
		         android:layout_width="match_parent"
		         android:layout_height="120dp"
		         android:background="@drawable/login_top_bg"/>
			 <EditText android:layout_width="fill_parent"
			     android:layout_height="200dp"
			     android:paddingLeft="10dp"
			     android:background="@drawable/bg_border1"
			     android:gravity="top"
			     android:textCursorDrawable="@drawable/focus_style">
			     <requestFocus />
			 </EditText>
			 <Button
                 android:id="@+id/personal_login_button"
                 android:layout_width="45dp"
                 android:layout_height="36dp"
                 android:layout_marginTop="20dp"
                 android:background="@drawable/my_personal_click_login"
                 android:layout_gravity="right"
                 android:text="@string/bt_criticism_submit"
                 android:textColor="@color/login_button"
                 android:textSize="@dimen/small_medium_text_size"
                 android:textStyle="bold" />
	 	</LinearLayout>
	 </ScrollView>
	 
	 
	 
	 
	 
	 
</LinearLayout>
