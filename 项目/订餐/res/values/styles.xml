<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
	<style name="MineItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_height_middle</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>
    
	<!-- 标题栏 -->
    <style name="TopbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/topbar_height</item>
        <item name="android:background">@drawable/top1_bg</item>
    </style>
    
    
    <!-- popwidnow 显示消失动画 -->

    <style name="popwindow_delete_btn_anim_style">
        <item name="android:windowEnterAnimation">@anim/delete_btn_show</item>
 <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/delete_btn_hide</item>
 <!-- 指定消失的动画xml -->

    </style>
    
    
    
</resources>
